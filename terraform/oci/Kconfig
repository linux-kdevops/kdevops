source "terraform/oci/kconfigs/Kconfig.image"
endmenu
menu "Storage"
source "terraform/oci/kconfigs/Kconfig.storage"
endmenu
menu "Network"
source "terraform/oci/kconfigs/Kconfig.network"
endmenu
menu "Identity & Access"
source "terraform/oci/kconfigs/Kconfig.identity"
endmenu

endif # TERRAFORM_OCI
