	default "m6gd.4xlarge" if TERRAFORM_AWS_INSTANCE_M6GD_4XLARGE
	default "m6gd.8xlarge" if TERRAFORM_AWS_INSTANCE_M6GD_8XLARGE
	default "m6gd.12xlarge" if TERRAFORM_AWS_INSTANCE_M6GD_12XLARGE
