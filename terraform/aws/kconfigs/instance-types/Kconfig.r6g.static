config TERRAFORM_AWS_R6G_SIZE
	string
	default "r6g.medium" if TERRAFORM_AWS_INSTANCE_R6G_MEDIUM
	default "r6g.large" if TERRAFORM_AWS_INSTANCE_R6G_LARGE
	default "r6g.xlarge" if TERRAFORM_AWS_INSTANCE_R6G_XLARGE
