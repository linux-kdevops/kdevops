config TERRAFORM_AWS_R7G_SIZE
	string
	default "r7g.medium" if TERRAFORM_AWS_INSTANCE_R7G_MEDIUM
	default "r7g.large" if TERRAFORM_AWS_INSTANCE_R7G_LARGE
	default "r7g.xlarge" if TERRAFORM_AWS_INSTANCE_R7G_XLARGE
